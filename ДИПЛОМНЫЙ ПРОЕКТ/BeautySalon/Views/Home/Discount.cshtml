@model IEnumerable<BeautySalon.Models.Акция>

@{
    ViewBag.Title = "Акции";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Акции</h2>


<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Дата начала
        </th>
        <th>
            Дата окончания
        </th>
        <th>
            Скидка %
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.НазваниеАкция)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ДатаНачала)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ДатаОкончания)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Скидка)
        </td>
        
    </tr>
}

</table>
