@model BeautySalon.Models.Услуга

@{
    ViewBag.Title = "Редактировать услугу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать услугу</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Услуга</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.КодУслуга)

        <div class="form-group">
            @*@Html.LabelFor(model => model.НаименованиеУслуга, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">Наименование</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.НаименованиеУслуга, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.НаименованиеУслуга, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Категория</div>
            <div class="col-md-10">
                @Html.DropDownList("КодКатегория", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.КодКатегория, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @*@Html.LabelFor(model => model.ЦенаУслуги, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">Цена</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ЦенаУслуги, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ЦенаУслуги, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Описание, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">Описание</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Описание, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Описание, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Service")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
