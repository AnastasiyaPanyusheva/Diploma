@model BeautySalon.Models.Приход

@{
    ViewBag.Title = "Редактирование прихода";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование прихода</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Приход</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.КодПриход)

        <div class="form-group">
            @Html.LabelFor(model => model.КодПоставщик, "КодПоставщик", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("КодПоставщик", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.КодПоставщик, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ДатаПриход, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ДатаПриход, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ДатаПриход, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "BoxComing")
</div>
