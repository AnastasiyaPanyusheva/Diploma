@model BeautySalon.Models.Поставщик

@{
    ViewBag.Title = "Редактирование поставщика";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование поставщика</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.КодПоставщик)

        <div class="form-group">
            @Html.LabelFor(model => model.НаименованиеПоставщик, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.НаименованиеПоставщик, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.НаименованиеПоставщик, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ТелефонПоставщик, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ТелефонПоставщик, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ТелефонПоставщик, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.АдресПоставщик, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.АдресПоставщик, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.АдресПоставщик, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailПоставщик, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailПоставщик, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailПоставщик, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Provider")
</div>
